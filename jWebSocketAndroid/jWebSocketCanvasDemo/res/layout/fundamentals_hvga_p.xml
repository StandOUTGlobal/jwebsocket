<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/lytFund"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
    <TextView
android:id="@+id/lblFundLog"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="#E0E0E0"
android:text="Incoming Messages..."
android:layout_weight="1"
>
    </TextView>
    <TextView
android:id="@+id/lblMessage"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Message"
>
    </TextView>
    <EditText
android:id="@+id/txfMessage"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Your Message"
android:textSize="18sp"
>
    </EditText>
    <TextView
android:id="@+id/lblTarget"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Target"
>
    </TextView>
    <EditText
android:id="@+id/txfTarget"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Target"
android:textSize="18sp"
>
    </EditText>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:paddingTop="15sp">-->
        <Button
android:id="@+id/btnFundSend"
android:layout_width="50sp"
android:layout_height="wrap_content"
android:text="Send"
android:layout_weight="1">
        </Button>
        <Button
android:id="@+id/btnFundBroadcast"
android:layout_width="50sp"
android:layout_height="wrap_content"
android:text="Broadcast"
android:layout_weight="1">
        </Button>
    </LinearLayout>
</LinearLayout>
